<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body ng-app="starredUp">
    <div class="container-fluid">
        <div class="row">
            <div class="navbar"></div>
                <nav class="navbar navbar-default">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">StarredUp<i class="glyphicon glyphicon-star-empty"></i></a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li ui-sref-active="active"><a ui-sref="product">Products<span class="sr-only">(current)</span></a></li>
                            <li ui-sref-active="active"><a ui-sref="review">Reviews</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#">One more separated link</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form class="navbar-form navbar-left" role="search">
                            <div class="input-group">
                                <input search-term ng-model="searchTerm" value="searchTerm" class="form-control" placeholder="Search">
                                <span class="input-group-btn">
                                    <button ui-sref="search" ng-click="productSearchController.init()" id="search-button" class="btn btn-secondary" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                </span>
                            </div>
                        </form>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">Link</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a ui-sref="login">Log In</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a ui-sref="admin_addProduct">Add product</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </nav>
            <div ui-view=""></div>
        </div>
    </div>
</body>
<script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}" type="application/javascript"></script>
<script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}" type="application/javascript"></script>
<script src="{{ asset('spin/spin.js') }}" type="application/javascript"></script>

<script src="{{ asset('angular/js/angular.js') }}" type="application/javascript"></script>
<script src="{{ asset('bower_components/angular-ui-router/release/angular-ui-router.js') }}" type="application/javascript"></script>
<script src="{{ asset('bower_components/angular-spinner/dist/angular-spinner.min.js') }}" type="application/javascript"></script>

<script src="{{ asset('app/app.module.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/app.config.js') }}" type="application/javascript"></script>

<script src="{{ asset('app/home/homeController.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/product/productController.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/product/viewProductController.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/review/reviewController.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/review/editReviewController.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/login/loginController.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/search/productSearchController.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/admin/addProductAdminController.js') }}" type="application/javascript"></script>

<script src="{{ asset('app/service/angular-spinner.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/service/reviewService.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/service/searchService.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/service/adminService.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/service/memberService.js') }}" type="application/javascript"></script>
<script src="{{ asset('app/service/productService.js') }}" type="application/javascript"></script>

<script src="{{ asset('app/review/editReview.html') }}" type="text/html"></script>

<script src="{{ asset('app/shared/directives/searchTerm.js') }}" type="application/javascript"></script>




</html>
