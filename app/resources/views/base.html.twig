<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <script type="text/javascript" src="https://static.filestackapi.com/v3/filestack.js"></script>
    <script>
        var client = filestack.init('AcyWmQJmRhKbeB8QasP3Qz');
        function showPicker() {
            client.pick({
            }).then(function(result) {
                var url = result.filesUploaded[0].url;
                $('.memberImg').attr('src', url);
            });
        }
    </script>
</head>
<body ng-app="starredUp">
    <div class="container-fluid">
        <div class="row">
            <div ng-controller="navController as vm">
                <nav class="navbar navbar-default navbar-fixed-top">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">StarredUp<i class="glyphicon glyphicon-star-empty"></i></a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                            <li><a ui-sref="product">Products</a></li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reviews <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a ui-sref="review">Reviews</a></li>
                                    <li><a ui-sref="review_add">Write a Review</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form class="navbar-form navbar-left" role="search">
                            <div class="input-group">
                                <input style="width:400px;" search-term ng-model="searchTerm" class="form-control" placeholder="Search">
                                <span class="input-group-btn">
                                    <button ui-sref="search" ng-click="productSearchController.init()" id="search-button" class="btn btn-secondary" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                </span>
                            </div>
                        </form>
                        <div ng-show="vm.member.memberName" class="navbar-form navbar-left">
                            <div class="visible-lg-inline">
                                <h5 ng-bind="vm.welcomeMessage"></h5>
                            </div>
                        </div>
                        <div class="nav navbar-right" style="padding-right: 30px;">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a class="dropdown-toggle text-left" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li ng-show="!vm.member"><a ui-sref="login">Log In</a></li>
                                        <li ng-show="!vm.member"><a ui-sref="create_account">Sign Up</a></li>
                                        <li ng-show="vm.member"><a ui-sref="account">My Account</a></li>
                                        <li ng-show="vm.member"><a target="_self" ng-click="vm.logout()">Log Out</a></li>
                                        <li ng-show="vm.member"><a href="swagger">API Doc</a></li>
                                        <li ng-show="vm.member" role="separator" class="divider"></li>
                                        <li ng-show="vm.member"><a ui-sref="admin_addProduct">Add product</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div><!-- /.nav-collapse -->
                </nav>
            </div>
            <div ui-view=""></div>
        </div>
    </div>
</body>
